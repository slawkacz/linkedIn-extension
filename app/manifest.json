{
    "name": "__MSG_appName__",
    "version": "0.0.12",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["scripts/chromereload.js", "scripts/background.js"]
    },
    "browser_action": {
        "name": "LinkedInExt"
    },
    "content_scripts": [{
        "matches": ["https://www.linkedin.com/profile/*"],
        "css": ["scripts/libs/taggle.js/assets/css/taggle.min.css", "scripts/content/templates.css"],
        "js": ["scripts/content/storage.js", "scripts/libs/taggle.js/src/taggle.js", "scripts/libs/transparency/dist/transparency.min.js", "scripts/content/constants.js", "scripts/content/contentscript.js"],
        "run_at": "document_idle",
        "all_frames": false
    }],
    "permissions": ["tabs", "storage", "http://*/*", "https://*/*"],
    "web_accessible_resources": ["scripts/content/templates.html"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}